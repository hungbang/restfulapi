<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.entity.GroupVariantsEntity</class>
        <class>com.entity.OrderItemsEntity</class>
        <class>com.entity.OrdersEntity</class>
        <class>com.entity.ProductGroupsEntity</class>
        <class>com.entity.ProductImagesEntity</class>
        <class>com.entity.ProductsEntity</class>
        <class>com.entity.UsersEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/spring-hateoas"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value=""/>
            <property name="eclipselink.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
